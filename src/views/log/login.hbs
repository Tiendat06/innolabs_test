<div class="login">
    <form onsubmit="return false" novalidate class="form-group login-form col-lg-5 col-md-5 col-sm-12">
        <div class="login-title">
            <h3 class="text-center">Login</h3>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email" class="form-control" placeholder="Enter email">
        </div>
        <div class="form-group mt-3">
            <label for="pwd">Password</label>
            <input type="password" id="pwd" class="form-control" placeholder="Enter password">
        </div>
        <div class="login-register mt-3">
            <div class="login-register--left d-flex col-lg-6 col-md-6 col-sm-6">
                <p class="mb-0">Have an account?</p>
                <a href="/log/register">Register now</a>
            </div>

            <div class="login-register--right col-lg-6 col-md-6 col-sm-6">
                <a style="text-align: right; display: block" href="/log/forgot">Forgot password?</a>
            </div>
        </div>
        <div class="login-btn mt-3">
            <button id="btn-login" class="btn btn-success">Login</button>
        </div>
    </form>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        if(window.login) {
            login()
